{
  "name": "three-custom-shader-material-monorepo",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "author": "Faraz Shaikh <farazzshaikh@gmail.com>",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "package",
      "examples/*"
    ]
  },
  "preconstruct": {
    "packages": [
      "package"
    ]
  },
  "scripts": {
    "build": "preconstruct build",
    "dev": "preconstruct dev && yarn workspace debug start",
    "postinstall": "preconstruct dev && manypkg check",
    "ci": "preconstruct validate && manypkg check && yarn build",
    "release": "yarn ci && yarn changeset publish",
    "clean": "rm -rf node_modules package/dist examples/*/node_modules"
  },
  "dependencies": {
    "@changesets/cli": "^2.24.3",
    "@manypkg/cli": "^0.19.1",
    "@preconstruct/cli": "^2.1.5"
  },
  "stackblitz": {
    "startCommand": "cd examples/waves && yarn start"
  }
}
